[alias]
    deleted = log --diff-filter=D --summary
    ll = log --pretty=format:'%h : %s' --graph --decorate
    lol = log --pretty=oneline --graph --decorate --abbrev-commit
    la = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
[color]
    ui = true
[color "branch"]
    current = magenta
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = red
[apply]
    ignorewhitespace = change
    whitespace = nowarn
[core]
    ignorecase = false
    filemode = false
    editor = /usr/bin/vim

